{
  "compilerOptions": {
    "module": "commonJS",
    "target": "ES2020",
    "noEmit": true,
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["examples/**/*"]
}
