{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["ES2020", "DOM"],
    "rootDir": ".",
    "module": "commonJS",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "skipLibCheck": true
  },
  "include": ["packages/**/*"],
  "exclude": ["examples/**/*", "./packages/replicate-dom/test/happy-dom-tests/**/*.ts"]
}
