{
  "name": "visual-ui-test-debugger",
  "version": "0.0.0",
  "description": "Debug UI tests while seeing the UI",
  "displayName": "Visual UI Test Debugger",
  "preview": true,
  "keywords": [
    "vitest",
    "test",
    "typescript",
    "javascript"
  ],
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onCommand:visual-ui-test-debugger.configureTest",
    "workspaceContains:**/vitest.config.js",
    "workspaceContains:**/vite.config.js",
    "workspaceContains:**/vitest.config.ts",
    "workspaceContains:**/vite.config.ts",
    "workspaceContains:**/package.json"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "prepare": "./prepare.sh",
    "compile": "tsup --minify && vite build ./src/web-view-vite",
    "watch": "pnpm run \"/^watch:.*/\"",
    "watch:extension": "tsup --watch --sourcemap",
    "watch:vite": "vite ./src/web-view-vite",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "poffm",
  "license": "ISC",
  "contributes": {
    "configuration": {
      "title": "Visual UI Test Debugger",
      "properties": {
        "jestrunner.configPath": {
          "type": "string",
          "default": "",
          "description": "Jest config path (relative to `${workspaceFolder}` e.g. jest-config.json)",
          "scope": "window"
        },
        "jestrunner.jestPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to jest bin file (e.g. /usr/lib/node_modules/jest/bin/jest.js)",
          "scope": "window"
        },
        "jestrunner.projectPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to project directory (e.g. /home/me/project/sub-folder)",
          "scope": "window"
        },
        "jestrunner.debugOptions": {
          "type": "object",
          "default": {},
          "description": "Add or overwrite vscode debug configurations (only in debug mode) (e.g. { \"args\": [\"--no-cache\"] })",
          "scope": "window"
        },
        "jestrunner.runOptions": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string",
            "description": "CLI Option e.g. --coverage"
          },
          "description": "Add CLI Options to the Jest Command e.g. https://jestjs.io/docs/en/cli",
          "scope": "window"
        },
        "jestrunner.jestCommand": {
          "type": "string",
          "default": "",
          "description": "Define an alternative Jest command (e.g. for Create React App and similar abstractions)",
          "scope": "window"
        },
        "jestrunner.disableCodeLens": {
          "type": "boolean",
          "default": false,
          "description": "Disable CodeLens feature",
          "scope": "window"
        },
        "jestrunner.runInExternalNativeTerminal": {
          "type": "boolean",
          "default": false,
          "description": "Run jest runner in external native terminal. Disabled on debug mode",
          "scope": "window"
        },
        "jestrunner.codeLens": {
          "type": "array",
          "default": [
            "debug"
          ],
          "description": "Enable desired codeLens, possible value : 'run', 'debug', 'watch', 'coverage'. Defaults to ['run', 'debug'] ",
          "items": {
            "type": "string",
            "description": "Either 'run', 'debug', 'watch', 'coverage'"
          },
          "scope": "window"
        },
        "jestrunner.codeLensSelector": {
          "type": "string",
          "default": "**/*.{test,spec}.{js,jsx,ts,tsx}",
          "description": "CodeLens will be shown on files matching this pattern"
        },
        "jestrunner.enableYarnPnpSupport": {
          "type": "boolean",
          "default": false,
          "description": "Enable if you are using Yarn 2 with Plug'n'Play",
          "scope": "window"
        },
        "jestrunner.changeDirectoryToWorkspaceRoot": {
          "type": "boolean",
          "default": true,
          "description": "Changes directory before execution. The fallback order is:\n1. `jestrunner.projectPath`\n2. the nearest `package.json`\n3. `${workspaceFolder}`",
          "scope": "window"
        },
        "jestrunner.preserveEditorFocus": {
          "type": "boolean",
          "default": false,
          "description": "Preserve focus on editor when running tests",
          "scope": "window"
        },
        "jestrunner.yarnPnpCommand": {
          "type": "string",
          "default": "yarn-*.*js",
          "description": "Command for debugging with Plug'n'Play",
          "scope": "window"
        }
      }
    },
    "commands": [
      {
        "command": "visual-ui-test-debugger.debugJest",
        "title": "Debug Jest"
      },
      {
        "command": "visual-ui-test-debugger.debugJestPath",
        "title": "Debug Jest on Path"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "visual-ui-test-debugger.debugJest",
          "group": "02_jest"
        }
      ],
      "explorer/context": [
        {
          "command": "visual-ui-test-debugger.debugJestPath",
          "when": "explorerResourceIsFolder || resourceFilename =~ /.*\\.(spec|test)\\.(js|jsx|ts|tsx)$/",
          "group": "02_jest@2"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/sync-fetch": "^0.4.3",
    "@types/vscode": "^1.85.0",
    "@types/vscode-webview": "^1.57.4",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-solid": "^2.8.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@solid-primitives/event-listener": "^2.3.0",
    "@tanstack/solid-query": "^5.17.10",
    "@vscode/codicons": "^0.0.35",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "find-up": "^7.0.0",
    "get-port": "^7.0.0",
    "solid-js": "^1.8.7",
    "sync-fetch": "^0.5.2",
    "tinyspy": "^2.2.0",
    "vscode-jest-runner": "github:firsttris/vscode-jest-runner"
  },
  "pnpm": {
    "patchedDependencies": {
      "vscode-jest-runner@0.4.72": "patches/vscode-jest-runner@0.4.72.patch"
    }
  }
}
