{
  "name": "visual-ui-test-debugger",
  "version": "0.0.0",
  "description": "Debug UI tests while seeing the UI",
  "displayName": "Visual UI Test Debugger",
  "preview": true,
  "keywords": [
    "vitest",
    "test",
    "typescript",
    "javascript"
  ],
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onCommand:visual-ui-test-debugger.configureTest",
    "workspaceContains:**/vitest.config.*",
    "workspaceContains:**/vite.config.*",
    "workspaceContains:**/jest.config.*",
    "workspaceContains:**/package.json"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "compile": "tsup --minify && vite build ./src/web-view-vite",
    "watch": "pnpm run \"/^watch:.*/\"",
    "watch:extension": "tsup --watch --sourcemap",
    "watch:vite": "vite ./src/web-view-vite",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "poffm",
  "license": "ISC",
  "contributes": {
    "configuration": {
      "title": "Visual UI Test Debugger",
      "properties": {
        "visual-ui-test-debugger.disableCodeLens": {
          "type": "boolean",
          "default": false,
          "description": "Disable the in-editor Visual UI Debugger buttons",
          "scope": "window"
        },
        "visual-ui-test-debugger.codeLensSelector": {
          "type": "string",
          "default": "**/*.{test,spec}.{jsx,tsx}",
          "description": "Show the in-editor Visual UI Debugger buttons on files matching this pattern"
        },
        "visual-ui-test-debugger.cssFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Extra CSS files to load into the tested UI. Supports PostCSS."
        },
        "visual-ui-test-debugger.experimentalFastMode": {
          "type": "boolean",
          "default": true,
          "description": "Incrementally update the mirrored DOM instead of re-rendering it entirely on every change. This feature needs more testing."
        }
      }
    },
    "commands": [
      {
        "command": "visual-ui-test-debugger.visuallyDebugUI",
        "title": "Debug Jest"
      }
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "@types/vscode-webview": "^1.57.4",
    "@types/ws": "^8.5.10",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-solid": "^2.8.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@solid-primitives/event-listener": "^2.3.0",
    "@tanstack/solid-query": "^5.17.10",
    "@vscode/codicons": "^0.0.35",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "find-up": "^7.0.0",
    "get-port": "^7.0.0",
    "jest-editor-support": "^31.1.2",
    "lodash": "^4.17.21",
    "lucide-solid": "^0.321.0",
    "morphdom": "^2.7.2",
    "postcss-load-config": "^5.0.2",
    "solid-js": "^1.8.7",
    "tinyspy": "^2.2.0",
    "ws": "^8.16.0"
  }
}
