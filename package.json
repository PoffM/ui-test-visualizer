{
  "name": "visual-ui-test-debugger",
  "displayName": "Visual UI Test Debugger",
  "version": "0.0.0",
  "description": "Debug UI tests while seeing the UI",
  "preview": true,
  "author": "poffm",
  "keywords": [
    "vitest",
    "test",
    "typescript",
    "javascript"
  ],
  "categories": [
    "Testing"
  ],
  "main": "./build-prod/extension.js",
  "engines": {
    "vscode": "^1.77.0"
  },
  "activationEvents": [
    "workspaceContains:**/vitest.config.*",
    "workspaceContains:**/vite.config.*",
    "workspaceContains:**/jest.config.*",
    "workspaceContains:**/package.json"
  ],
  "contributes": {
    "configuration": {
      "title": "Visual UI Test Debugger",
      "properties": {
        "visual-ui-test-debugger.disableCodeLens": {
          "type": "boolean",
          "default": false,
          "description": "Disable the in-editor Visual UI Debugger buttons",
          "scope": "window"
        },
        "visual-ui-test-debugger.codeLensSelector": {
          "type": "string",
          "default": "**/*.{test,spec}.{jsx,tsx}",
          "description": "Show the in-editor Visual UI Debugger buttons on files matching this pattern"
        }
      }
    },
    "commands": [
      {
        "command": "visual-ui-test-debugger.visuallyDebugUI",
        "title": "Debug Jest"
      }
    ]
  },
  "scripts": {
    "build": "rm -rf build-prod && pnpm run -r build && (cd build-prod && npx vsce package --allow-missing-repository --skip-license --out ./extension.vsix)",
    "dev": "rm -rf build-dev && pnpm run -r dev",
    "test": "pnpm run --filter {./packages/*} test",
    "typecheck": "tsc",
    "code-server-up": "docker compose -f test/docker-compose.yml up -d && docker exec vscodeExtension code-server --install-extension /source/build-prod/extension.vsix",
    "code-server-down": "docker compose -f test/docker-compose.yml down",
    "test:e2e": "pnpm run code-server-up && playwright test && pnpm run code-server-down"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.11.6",
    "@playwright/test": "^1.42.1",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^20.12.2",
    "@vscode/vsce": "^2.24.0",
    "eslint": "^8.57.0",
    "tsup": "^8.0.2",
    "type-fest": "^4.14.0",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "jest-editor-support@31.1.2": "patches/jest-editor-support@31.1.2.patch",
      "jest-config@29.7.0": "patches/jest-config@29.7.0.patch"
    }
  }
}
