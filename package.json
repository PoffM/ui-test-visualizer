{
  "name": "visual-ui-test-debugger",
  "displayName": "Visual UI Test Debugger",
  "version": "0.0.0",
  "description": "Debug UI tests while seeing the UI",
  "preview": true,
  "author": "poffm",
  "license": "ISC",
  "keywords": [
    "vitest",
    "test",
    "typescript",
    "javascript"
  ],
  "categories": [
    "Testing"
  ],
  "main": "./packages/extension/dist/extension.js",
  "engines": {
    "vscode": "^1.77.0"
  },
  "activationEvents": [
    "onCommand:visual-ui-test-debugger.configureTest",
    "workspaceContains:**/vitest.config.*",
    "workspaceContains:**/vite.config.*",
    "workspaceContains:**/jest.config.*",
    "workspaceContains:**/package.json"
  ],
  "contributes": {
    "configuration": {
      "title": "Visual UI Test Debugger",
      "properties": {
        "visual-ui-test-debugger.disableCodeLens": {
          "type": "boolean",
          "default": false,
          "description": "Disable the in-editor Visual UI Debugger buttons",
          "scope": "window"
        },
        "visual-ui-test-debugger.codeLensSelector": {
          "type": "string",
          "default": "**/*.{test,spec}.{jsx,tsx}",
          "description": "Show the in-editor Visual UI Debugger buttons on files matching this pattern"
        },
        "visual-ui-test-debugger.cssFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Extra CSS files to load into the tested UI. Supports PostCSS."
        },
        "visual-ui-test-debugger.experimentalFastMode": {
          "type": "boolean",
          "default": true,
          "description": "Incrementally update the mirrored DOM instead of re-rendering it entirely on every change. This feature needs more testing."
        }
      }
    },
    "commands": [
      {
        "command": "visual-ui-test-debugger.visuallyDebugUI",
        "title": "Debug Jest"
      }
    ]
  },
  "scripts": {
    "build": "pnpm run -r \"/^build:.*/\"",
    "dev": "pnpm run -r \"/^dev:.*/\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
